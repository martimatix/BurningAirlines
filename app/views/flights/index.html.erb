
<p id="notice"><%= notice %></p>

<h1>Listing Flights</h1>

<table>
  <thead>
    <tr>
      <th>Flight Number</th>
      <th>Date</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Airplane ID</th>
      <th>Airplane Name</th>
      <th colspan="3">Mess about with the Schedule</th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.flight_num %></td>
        <td><%= flight.date.strftime('%e %B %Y') %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.airplane_id %></td>
        <td><%= flight.airplane.name %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

